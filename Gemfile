source 'https://rubygems.org'

gem 'sass', '~> 3.3.4'

# Use Thoughtbot's Bourbon for SASS mixins
gem 'bourbon'

# Use Thoughtbot's Bitters for scaffolding styles and variables
gem "bitters"

# Use Susy for grid
gem "susy", "~> 2.1.1"

# Use Autoprefixer so we no longer need to use mixins for CSS3 properties
gem 'middleman-autoprefixer'

# Middleman
gem 'middleman', '~> 3.3.2'
